    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BuffetRestaurent"
        android:usesCleartextTraffic="true">
        <activity android:name=".AddMenuActivity"
            android:parentActivityName=".MenuMangeForStaff"
            ></activity>
        <activity android:name=".MenuMangeForStaff" />
        <activity android:name=".Controler.CustomerMenu" />
        <activity android:name=".ConfirmReservation" />
        <activity android:name=".Controler.UserChangePassword" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controler.UserProfile"
            android:parentActivityName=".Controler.HomePage" />
        <activity
            android:name=".HomePageStaff"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".AddReservation" />
        <activity
            android:name=".Controler.HomePage"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".UpdateReservation" />
        <activity android:name=".CancelReservation" />
    </application>

</manifest>